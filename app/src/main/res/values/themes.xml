<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Базовая тема приложения с поддержкой DayNight -->
    <style name="Theme.Electronic_journal" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Пример базовых цветов -->
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Прочие настройки, если нужны -->
        <item name="android:statusBarColor">?attr/colorSurface</item>

        <!-- Делает статус-бар светлым, когда в системе дневная тема -->
        <item name="android:windowLightStatusBar">true</item>

    </style>

</resources>
