<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/DarkBackgroundConstraintLayout"
    tools:context=".fragment.teacher.PersonalDataTeacherFragment">

    <!-- Основной контент в ScrollView -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.9">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!-- Заголовок страницы -->
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/personal_data"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="@color/darkAccent"
                android:gravity="center"
                android:paddingVertical="16dp"/>

            <!-- ImageView для фото профиля -->
            <ImageView
                android:id="@+id/ivTeacherProfilePicture"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/ic_profile_placeholder"
                android:scaleType="centerCrop"
                android:layout_marginBottom="20dp"
                android:background="@drawable/circle_background"/>

            <!-- Карточка с информацией учителя -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="16dp"
                style="@style/DarkCardViewStyleCorner16">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tvTeacherFullName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="@string/ФИО"
                        android:textSize="18sp"
                        android:textColor="@color/white"
                        android:paddingBottom="12dp"/>

                    <TextView
                        android:id="@+id/tvTeacherID"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="@string/ID_Сущности"
                        android:textSize="18sp"
                        android:textColor="@color/white"
                        android:paddingBottom="12dp"/>

                    <TextView
                        android:id="@+id/tvTeacherEmail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="@string/email"
                        android:textSize="18sp"
                        android:textColor="@color/white"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Кнопка выхода -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btLogout"
                style="@style/ButtonOutlinedDarkAccent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_gravity="center"/>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
